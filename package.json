{
  "name": "@jopemachine/arvis-core",
  "version": "0.1.49",
  "description": "Core part of Arvis, Designed as a core module of the CUI and GUI.",
  "main": "dist/index.js",
  "bin": "dist/main.js",
  "files": [
    "dist/**",
    "execa/**",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "test": "jest --verbose ./__test__/unit",
    "build": "tsc",
    "start": "npm run build && dist/cli.js",
    "rebuild": "rm -rf node_modules && npm i && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jopemachine/arvis-core.git"
  },
  "keywords": [
    "arvis"
  ],
  "author": {
    "name": "jopemachine",
    "email": "jopemachine@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.x"
  },
  "bugs": {
    "url": "https://github.com/jopemachine/arvis-core/issues"
  },
  "homepage": "https://github.com/jopemachine/arvis-core#readme",
  "devDependencies": {
    "@types/archiver": "^5.1.0",
    "@types/chalk": "^2.2.0",
    "@types/chmodr": "^1.0.0",
    "@types/fs-extra": "^9.0.8",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.35",
    "@types/recursive-readdir": "^2.2.0",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.6",
    "@types/unzipper": "^0.10.3",
    "@types/uuid": "^8.3.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@jopemachine/arvis-plist-converter": "^0.1.1",
    "@jopemachine/arvis-extension-validator": "^0.0.1",
    "archiver": "^5.3.0",
    "chalk": "^4.1.0",
    "chmodr": "^1.2.0",
    "clipboardy": "^2.3.0",
    "conf": "^10.0.1",
    "env-paths": "^2.2.1",
    "fs-extra": "^9.1.0",
    "lodash": "^4.17.21",
    "meow": "^9.0.0",
    "open": "^8.0.4",
    "p-cancelable": "^2.1.1",
    "readdirp": "^3.6.0",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "unzipper": "^0.10.11",
    "uuid": "^8.3.2",
    "xml-js": "^1.6.11"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "verbose": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm run test"
    }
  }
}
